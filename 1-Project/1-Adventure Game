import java.util.*; //import java.util.*; → This imports all classes in the java.util package (like Scanner, Random, ArrayList, etc.), so it will definitely cover your Scanner.
class Adventuregame {
    public static void main(String[] args) {
        System.out.println("Adventure Game 🗡️🌲");
        Scanner sc=new Scanner(System.in);
        while(true){
             System.out.println("You are on a Adventure...enter 1 to enter Cave or 2 to stay Outside.");
            int op=sc.nextInt();
            if (op==1)
            {
                System.out.println("You entered the Cave but have Encountered a Monster!");
                System.out.println("Press 1 to fight (or) Press 2 to do nothing");
                int option=sc.nextInt();
                if(option==1){
                    System.out.println("You Fought the Monster!");
                    break;
                }
                else{
                    System.out.println("You died!");
                    break;
                }
            }
            else {
                System.out.println("You stayed back...want to try again??");
            }
        }
    }
}
