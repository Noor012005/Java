public class HelloWorld {
    public static void main(String[] args) {
        boolean isLatte=true;
        boolean isIced=false;
        boolean withMacha= true;
        int itemsOrdered=1;
        int vanillaPumps=3;
        if(isLatte && isIced){
            System.out.println("espresso, milk, ice, syrup.");
        }
        else if(isLatte && withMacha){
            System.out.println("matcha, oat milk, ice, vanilla.");
        }
        else if(isLatte){
            System.out.println("expresso, steamed milk.");
        }
        else{
            System.out.println("Select a drink to get started!");
        }

        if(itemsOrdered>1){
            System.out.println("provide a cup holder");
        }
        if(vanillaPumps>2){
            System.out.println("charge $1 extra");
        }
        
    }
}
